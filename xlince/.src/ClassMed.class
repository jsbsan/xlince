Public Function calcular() As Single
  
  'segun la formula, opero de diversa  manera
  Select hformula
    Case 0 'operacion mas simple...
      If hlargo = 0 Then hlargo = 1
      If hancho = 0 Then hancho = 1
      If halto = 0 Then halto = 1
      
      hresultado = hNumeroVeces * hLargo * hancho * halto
      'diversos tipos de caso: perfiles, etc...superficies de triangulos, etc...    
      
  End Select
  
  Return hresultado

End

